{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "types": ["vitest/globals"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
